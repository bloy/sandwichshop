<% content_for :title, "Log In" %>
<%= simple_form_for @user_session, :url => user_session_path do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, :as => :boolean %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Create an account", new_user_path, :class => 'action' %>
